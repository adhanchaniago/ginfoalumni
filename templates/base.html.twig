<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="Content-Type" content="UTF-8">
    <meta name="Content-Language" content="fr">
    <meta name="Description" content="GInfo - Association d'informatique de Centrale Marseille">
    <meta name="Keywords" content="ginfo, groupe, informatique, it, association">
    <meta name="Copyright" content="GINFO">
    <meta name="Revisit-After" content="15 days">
    <title>{% block titre_page %}GInfo Alumni{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <link rel="stylesheet" href="{{ asset('build/vendor.css') }}" />
    <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
    {% block page_css %}
    {% endblock %}
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
</head>

<body {% block additionnal_body_block %}{% endblock %} class="theme-indigo {% block additionnal_body_class %}{% endblock %}">

<nav class="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            {% if is_granted('ROLE_USER') %}
                {% block mobile_collapse %}
                    <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                {% endblock %}
                <a href="javascript:void(0);" class="bars"></a>
            {% endif %}

            <a class="navbar-brand" href={{ path('home') }}>
                GINFO Alumni
            </a>

        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                {% if not app.user %}
                <li class="nav-item">
                    <a href="{{ path('security_login') }}" class="nav-link">Connexion</a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a href="{{ path('security_logout') }}" class="navbar-link">Déconnexion</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<section>
    <aside id="leftsidebar" class="sidebar">
        <div class="menu">
            <ul class="list">
                <li class="header">Menu</li>
                <li {% if app.request.pathInfo starts with "/evenements" %}class="active"{% endif %}>
                    <a href={{ path('evenements') }} id="link_add">
                        <i class="material-icons">add</i> <span>Evènements</span>
                    </a>
                </li>
                <li {% if app.request.pathInfo starts with "/Offre_de_stage" %}class="active"{% endif %}>
                    <a href={{ path('internshipOffer') }} id="link_add">
                        <i class="material-icons">add</i> <span>Offre de stage</span>
                    </a>
                </li>
                <li {% if app.request.pathInfo starts with "/annuaire" %}class="active"{% endif %}>
                    <a href={{  path('annuaire') }} id="link_add">
                        <i class="material-icons">add</i> <span>Annuaire</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>
</section>

<section class="content">
    <div class="container-fluid">
        {% block content %}
        {% endblock %}
    </div>
</section>

<div id="app-notifs">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="notif" data-type="{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
<script src="{{ asset('build/vendor.js') }}"></script>
<script src="{{ asset('build/app.js') }}"></script>
<script src="{{ asset('build/runtime.js') }}"></script>


{% block page_js %}
{% endblock %}
</body>

</html>